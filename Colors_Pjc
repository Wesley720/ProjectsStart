import java.util.ArrayList;

public class Project_Colors {
    public static void main (String[] args);{
        ArrayList <String> items = new ArrayList<String>();

        items.add("red");
        items.add(0, "yellow");

        for ( int i=0; i <items.size(); i++);
        System.out.printf("%s", items.get( i ));

        display( items, "\nDisplay list contents with enhanced for statement:" );

        items.add("green");
        items.add("yellow");

        System.out.println("Display list contents with counter-controlled loop:");

        display(items, "List with two new elements:");

        items.remove("yellow");
        display (items, "Remove first instance of yellow:");

        items.remove(1);
        display (items, "Remove second element (green):";

        System.out.printf( "\"lax\"is%sinthelist\n",items.contains("lax") ? "":" not");
        System.out.printf( "Size: sin%\n", items.size());

    }
}
